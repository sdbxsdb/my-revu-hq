{
  "buildCommand": "yarn workspace frontend build",
  "outputDirectory": "apps/frontend/dist",
  "installCommand": "yarn install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/reset-monthly-sms",
      "schedule": "0 0 1 * *"
    }
  ]
}
